<mvc:View
    controllerName="com.sap.managecalloffapp.controller.View2"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:uxap="sap.uxap"
    xmlns:core="sap.ui.core"
    xmlns:semantic="sap.f.semantic"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:upload="sap.m.upload"
    xmlns:c="sap.suite.ui.commons"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <uxap:ObjectPageLayout
                id="ObjectPageLayout1"
                upperCaseAnchorBar="false"
                showAnchorBar="true"
                enableLazyLoading="true"
            >
                <uxap:sections>
                    <uxap:ObjectPageSection id="_IDGenObjectPageSection1">
                        <uxap:subSections>
                            <uxap:ObjectPageSubSection
                                id="_IDGenObjectPageSubSection1"
                                title=""
                                titleUppercase="false"
                            >
                                <uxap:blocks>
                                    <f:SimpleForm
                                        id="supplierForm1"
                                        layout="ResponsiveGridLayout"
                                        title="General Information"
                                        labelSpanXL="3"
                                        labelSpanL="3"
                                        labelSpanM="3"
                                        labelSpanS="12"
                                        adjustLabelSpan="false"
                                        emptySpanXL="3"
                                        emptySpanL="3"
                                        emptySpanM="3"
                                        emptySpanS="12"
                                    >
                                        <Label
                                            id="_IDGenLabel1"
                                            text="Call Off Notice Type"
                                            class="sapUiTinyMarginTop"
                                        />
                                        <Select
                                                        forceSelection="false"
                                                        width="100%"
                                                        id="ConId"
                                                        items="{/call_off_notice_typeT}"
                                                    >
                                                        <core:Item
                                                            key=""
                                                            text="{callOffNoticeType}"
                                                        />
                                                       
                                                    </Select>

                                        <Label
                                            id="_IDGe"
                                            text="Supplier"
                                            class="sapUiTinyMarginTop"
                                        />
                                        <Input
                                            id="idContractorNumberInput"
                                            value=""
                                            valueHelpRequest="supplierHelp"
                                            showValueHelp="true"
                                        />

                                        <Label
                                            id="_IDGe1"
                                            text="Contract"
                                            class="sapUiTinyMarginTop"
                                        />
                                        <Input
                                            id="idContractNumberInput"
                                            value=""
                                            valueHelpRequest="contractHelp"
                                            showValueHelp="true"
                                        />
                                        <Label
                                            id="_IDGenL2"
                                            text="Start Date"
                                            class="sapUiTinyMarginTop"
                                        />
                                        <DatePicker id="strtDateId"></DatePicker>
                                        <Label
                                            id="_IDGenLe2"
                                            text="End Date"
                                            class="sapUiTinyMarginTop"
                                        />
                                        <DatePicker id="endDateId" ></DatePicker>
                                        <Label
                                            text="Currency"
                                            class="sapUiTinyMarginTop"
                                        />
                                       <Input id="currencyId" value="USD"  editable="false"/>
                                        <Label
                                            text="Retantion"
                                            class="sapUiTinyMarginTop"
                                        />
                                        <Input value="" id="retentionId" editable="false"/>
                                        <Label
                                            text="Payment Terms"
                                            class="sapUiTinyMarginTop"
                                        />
                                        <Input value="" id="paymentTermId" editable="false"/>
                                        <Label
                                            text="Partners"
                                            class="sapUiTinyMarginTop"
                                        />
                                        <Input value="" id="partnerId" />
                                    </f:SimpleForm>
                                </uxap:blocks>
                            </uxap:ObjectPageSubSection>

                            <uxap:ObjectPageSubSection
                                id="_IDGenObjectPageSubSection2"
                                title="Items"
                            >
                                <uxap:blocks>
                                    <Table
                                        id="idProductsTable"
                                        inset="false"
                                        mode="MultiSelect"
                                        items="{myModell>/}"
                                    >
                                        <headerToolbar>
                                            <OverflowToolbar>
                                            <ToolbarSpacer ></ToolbarSpacer>
                                                <Button
                                                    text="Add from Document" press="onAddFromDocument"
                                                />
                                                <Button text="Add Row" press="onAddItemPress"></Button>
                                                <Button text="Delete Row" press="onDelete"></Button>
                                                <Button text="Add more Details" press="onAddMoreDetails"></Button>


                                            </OverflowToolbar>
                                        </headerToolbar>

                                        <columns>
                                            <Column width="12em">
                                                <Text text="Item Category" />
                                            </Column>
                                            <Column
                                                minScreenWidth="Tablet"
                                                demandPopin="true"
                                            >
                                                <Text text="Material" />
                                            </Column>
                                            <Column
                                                minScreenWidth="Desktop"
                                                demandPopin="true"
                                            >
                                                <Text text="Short Text" />
                                            </Column>
                                            <Column
                                                minScreenWidth="Desktop"
                                                demandPopin="true"
                                                hAlign="Center"
                                            >
                                                <Text text="Material Group" />
                                            </Column>
                                            <Column>
                                                <Text text="Quantity" />
                                            </Column>
                                            <Column>
                                                <Text text="UOM" />
                                            </Column>
                                            <Column>
                                                <Text text="Price" />
                                            </Column>
                                            <Column>
                                                <Text text="Delivery Date" />
                                            </Column>
                                            <Column>
                                                <Text
                                                    text="Account Assignment Category"
                                                />
                                            </Column>
                                        </columns>
                                        <items>
                                            <ColumnListItem vAlign="Middle">
                                                <cells>
                                                    <Select
                                                        forceSelection="false"
                                                        items="{/item_categoryT}"
                                                    >
                                                        <core:Item
                                                            key=""
                                                            text="{itemCategory}"
                                                        />
                                                       
                                                    </Select>
                                                    <Select
                                                        forceSelection="false"
                                                        items="{/materialT}"

                                                    >
                                                        <core:Item
                                                            key=""
                                                            text="{material}"
                                                        />
                                                       
                                                    </Select>
                                                    <Input value="{myModell>ShortText}" />
                                                   <Select
                                                        forceSelection="false"
                                                        items="{/material_groupT}"
                                                    >
                                                        <core:Item
                                                            key=""
                                                            text="{materialGroup}"
                                                        />
                                                        
                                                    </Select>
                                                    <Input value="{myModell>Qunatity}"/>
                                                   <Select
                                                        forceSelection="false"
                                                        items="{/uomT}"
                                                    >
                                                        <core:Item
                                                            key=""
                                                            text="{uom}"
                                                        />
                                                       
                                                    </Select>
                                                    <Input value="{myModell>price}" />
                                                    <DatePicker ></DatePicker>
                                                      <Select
                                                        forceSelection="false"
                                                        items="{/account_assignment_categoryT}"
                                                    >
                                                        <core:Item
                                                            key=""
                                                            text="{accountAssignmentCategory}"
                                                        />
                                                        
                                                        
                                                    </Select>
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </uxap:blocks>
                            </uxap:ObjectPageSubSection>

                            <uxap:ObjectPageSubSection
                                id="_IDGenObjectPageSubSection"
                                title="History"
                            >
                                <uxap:blocks>
                                   
                                  <c:Timeline
                                    	sortOldestFirst="false"
                                        id="idTimeline"
                                        groupBy="logDateTime"
                                        enableDoubleSided="false"
                                        enableScroll="false"
                                         height="100%"
                                        filterTitle="Project Logs"
                                        content="{logModel>/}"
                                    >
                                        <c:content>
                                            <c:TimelineItem
                                            
                                                dateTime="{logModel>logDateTime}"
                                                title="{logModel>logTitle}"
                                                userNameClickable="true"
                                                
                                                userNameClicked="onUserNameClick"
                                                select="onPressItems"
                                                text="{logModel>logComments}"
                                                userName="{logModel>loggedBy}"
                                                icon="sap-icon://employee"
                                            />
                                        </c:content>
                                    </c:Timeline>
                                </uxap:blocks>
                                
                            </uxap:ObjectPageSubSection>

                            <uxap:ObjectPageSubSection
                                id="_IDGenObjectPageSubSeddction2"
                                title="Attachments"
                            >
                                <uxap:blocks>
                                    <upload:UploadSet
                                        id="uploadSet"
                                        instantUpload="false"
                                        uploadEnabled="true"
                                        afterItemAdded="onAfterItemAdded"
                                        uploadCompleted="onUploadCompleted"
                                        items="{
                        path: '/Files',
                        parameters: {
                            $orderby: 'createdAt desc'
                        },
                        templateShareable: false}"
                                    >
                                        <upload:toolbar>
                                            <OverflowToolbar>
                                                <ToolbarSpacer />
                                                <Button
                                                    text="Delete"
                                                    icon="sap-icon://delete"
                                                    press="onDelete"
                                                />
                                                <Button
                                                    text="Export"
                                                    press="onExport"
                                                />
                                            </OverflowToolbar>
                                        </upload:toolbar>
                                        <upload:items>
                                            <upload:UploadSetItem
                                                fileName="{fileName}"
                                                mediaType="{mediaType}"
                                                url="{url}"
                                                enabledEdit="false"
                                                visibleEdit="false"
                                                openPressed="onOpenPressed"
                                            >
                                                <upload:attributes>
                                                    <ObjectAttribute
                                                        title="Uploaded By"
                                                        text="{createdBy}"
                                                        active="false"
                                                    />
                                                    <ObjectAttribute
                                                        title="Uploaded on"
                                                        text="{createdAt}"
                                                        active="false"
                                                    />
                                                    <ObjectAttribute
                                                        title="File Size"
                                                        text="{size}"
                                                        active="false"
                                                    />
                                                </upload:attributes>
                                            </upload:UploadSetItem>
                                        </upload:items>
                                    </upload:UploadSet>
                                </uxap:blocks>
                            </uxap:ObjectPageSubSection>
                        </uxap:subSections>
                    </uxap:ObjectPageSection>
                </uxap:sections>
            </uxap:ObjectPageLayout>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer />
                <Button text="Save As Draft" />
                <Button text="Submit"  press="onSubmit"/>
                <Button text="Cancel" />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
